// Place your settings in this file to overfrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "build/*.aux": true,
    "build/*.bbl": true,
    "build/*.bcf": true,
    "build/*.blg": true,
    "build/*.fdb_latexmk": true,
    "build/*.log": true,
    "build/*.fls": true,
    "build/*.out": true,
    "build/*.pdf": false,
    "build/*.run.xml": true,
    "build/*.toc": true,
    "build/*.synctex.gz": true
  },
  "editor.tabSize": 2,

  // if you use Latex Workshop extension instead of building from cmdline:
  // a possible benefit is forward synctex search. On Windows, TeXlive
  // is recommended over MiKTex, as the latter doesn't ship with a synctex executable
  // (but not recommended if running `latexmk` manually from the command line with
  // MSys/GitHub shell).
  "latex-workshop.latex.toolchain": [
    {
      "command": "latexmk",
      "args": []
    }
  ],
  "latex-workshop.latex.outputDir": "./build/"
}
