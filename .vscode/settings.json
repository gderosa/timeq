// Place your settings in this file to overfrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "build/*.aux": true,
    "build/*.bbl": true,
    "build/*.bcf": true,
    "build/*.blg": true,
    "build/*.fdb_latexmk": true,
    "build/*.log": true,
    "build/*.fls": true,
    "build/*.out": true,
    "build/*.pdf": false,
    "build/*.run.xml": true,
    "build/*.toc": true,
    "build/*.synctex.gz": true
  },

  "editor.tabSize": 2,

  "latex-workshop.latex.toolchain": [
    {
      "command": "latexmk",
      "args": []
    }
  ],
  "latex-workshop.latex.outputDir": "./build/",
  // Disabled to allow use of `make` end especially `make cont` (`latexmk -pvc`)
  // from the command line and prevent conflicts (LaTeX Workshop has many other
  // useful features anyway, but YMMV).
  "latex-workshop.latex.autoBuild.onSave.enabled": false
}
